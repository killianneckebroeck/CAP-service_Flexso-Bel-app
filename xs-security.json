{
  "xsappname": "Bel_app",
  "tenant-mode": "dedicated",
  "scopes": [
    {
      "name": "$XSAPPNAME.Bel_App_User",
      "description": "Toegang voor gebruikers"
    }
  ],
  "role-templates": [
    {
      "name": "Bel_App_User",
      "description": "Toegang tot de applicatie",
      "scope-references": ["$XSAPPNAME.Bel_App_User"]
    }
  ],
  "role-collections": [
    {
      "name": "Bel_App_User_Collection",
      "description": "Rolcollectie voor geautoriseerde gebruikers",
      "role-template-references": ["$XSAPPNAME.Bel_App_User"]
    }
  ],
  "oauth2-configuration": {
    "redirect-uris": [
      "https://*.us10-001.hana.ondemand.com/**"
    ]
  },
  "allowedCorsOrigins": [
    "http://localhost:8080",
    "https://*.hana.ondemand.com"
  ],
  "allowedHeaders": [
    "Content-Type",
    "Authorization",
    "x-csrf-token"
  ],
  "allowedMethods": [
    "GET",
    "POST",
    "PUT",
    "DELETE",
    "OPTIONS"
  ]

}
